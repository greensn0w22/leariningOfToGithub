#ifndef UART2_H_
#define UART2_H_
#include <stdint.h>

enum TXD2{
	P0_10 = 0x11,
	P2_8 = 0x102


};

enum RXD2{
	P0_11 = 0x11,
	P2_9 = 0x122
};

enum BaudRate{
	_115_200,
	_230_400,
	_460_800

};

enum Parity{
	Pa_Disable = 0,
	Pa_Odd = 0x10,
	Pa_Even,
	Pa_Force_1,
	Pa_Force_0
};

enum Interupt{
	Int_RX,
	Int_Tx,
	Int_Disable
};

class Uart2{
	private : //Fonctions
		Uart2();
		~Uart2();
	public: //Fonctions
		Uart2(
			TXD2,
			RXD2,
			BaudRate,
			Parity,
			Interupt
			);



	private: //Variables
		static int allReadyDeclared;

	public: //Variables

};

#endif /* UART2_H_ */
